@model Produtoitau.Models.Produtos

@{
    ViewBag.Title = "Produtos";
}

<h2>Produtos</h2>

@using (Html.BeginForm("IDProduto", "Produto", FormMethod.Post))
{
<div class="table-responsive rounded">
    <table class="table table-hover-sm">
        <thead class="thead-dark">
            <tr>
                <td>@Html.LabelFor(a => a.IDProduto)</td>
                <td>@Html.LabelFor(a => a.Produto)</td>
                <td>@Html.LabelFor(a => a.Preco)</td>
                <td>@Html.LabelFor(a => a.QtdeEstoque)</td>
                <td>@Html.LabelFor(a => a.Categoria)</td>
            </tr>


            <tr>
                <td> @Html.DisplayFor(a => a.IDProduto)</td>
                <td> @Html.DisplayFor(a => a.Produto) </td>
                <td> @Html.DisplayFor(a => a.Preco) </td>
                <td> @Html.DisplayFor(a => a.QtdeEstoque) </td>
                <td> @Html.DisplayFor(a => a.Categoria) </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Alterar" />
                    <input type="submit" value="Incluir" />
                </td>
            </tr>
        </thead>
    </table>
</div>
        }

        @section Scripts{
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")

        }
